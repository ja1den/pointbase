{
	"compilerOptions": {
		"target": "es2020",
		"lib": [
			"es2020"
		],
		"skipLibCheck": true,
		"esModuleInterop": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "commonjs",
		"resolveJsonModule": true,
		"baseUrl": ".",
		"paths": {
			"@lib/*": [
				"../lib/src/*"
			]
		}
	},
	"exclude": [
		"node_modules"
	]
}
